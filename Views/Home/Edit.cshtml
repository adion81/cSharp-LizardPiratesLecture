@model LizardPirate

<h2>Edit @Model.Name</h2>

<form asp-action="Update" asp-route-LPId="@Model.LizardPirateId" method="post" class="col-5 mx-auto">

    <div class="form-group">
        <span asp-validation-for="Name"></span><br>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="LizardType"></span><br>
        <label asp-for="LizardType"></label>
        <input asp-for="LizardType" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="PirateRoll"></span><br>
        <label asp-for="PirateRoll"></label>
        <input asp-for="PirateRoll" class="form-control">
    </div>
    <input type="submit" value="Edit @Model.Name" class="btn btn-warning" >
</form>